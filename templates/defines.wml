<!-- ---------------------------------------------------------------------- -->
<!-- Define a tag for menu entries                                          -->
<!-- ---------------------------------------------------------------------- -->

<define-tag MENUEENTRY whitespace=delete>
<preserve en-name1>
<preserve en-name2>
<preserve en-link>
<preserve de-name1>
<preserve de-name2>
<preserve de-link>
<preserve es-name1>
<preserve es-name2>
<preserve es-link>

<preserve status>
<set-var %attributes>

<IMG SRC="$(IMAGES)/M_red.gif" ALIGN=TOP> &nbsp;
<ifeq "<get-var status>" "active" \
"<en><A CLASS=menue HREF="<get-var en-link>"></en>\
<de><A CLASS=menue HREF="<get-var de-link>"></de>\
<es><A CLASS=menue HREF="<get-var es-link>"></es>">\
<de><get-var de-name1></de>\
<en><get-var en-name1></en>\
<es><get-var es-name1></es>\
<ifeq "<get-var status>" "active" "</A>">
  
<BR>

<en>
  <if <get-var en-name2>  "\
      <IMG SRC="$(IMAGES)/M_empty.gif" ALIGN=TOP> &nbsp;\
      <ifeq "<get-var status>" "active" \
	"<A CLASS=menue HREF="<get-var en-link>">">\
      <get-var en-name2>\
      <ifeq "<get-var status>" "active" "</A>"> <BR>\
    "
  >
</en>

<de>
  <if <get-var de-name2> "\
      <IMG SRC="$(IMAGES)/M_empty.gif" ALIGN=TOP> &nbsp;\
      <ifeq "<get-var status>" "active" \
	"<A CLASS=menue HREF="<get-var de-link>">">\
      <get-var de-name2>\
      <ifeq "<get-var status>" "active" "</A>"> <BR>\
    "
  >
</de>


<es>
  <if <get-var es-name2>  "\
      <IMG SRC="$(IMAGES)/M_empty.gif" ALIGN=TOP> &nbsp;\
      <ifeq "<get-var status>" "active" \
	"<A CLASS=menue HREF="<get-var es-link>">">\
      <get-var es-name2>\
      <ifeq "<get-var status>" "active" "</A>"> <BR>\
    "
  >
</es>


<BR>

<restore de-name1>
<restore de-name2>
<restore de-link>
<restore en-name1>
<restore en-name2>
<restore en-link>
<restore es-name1>
<restore es-name2>
<restore es-link>
<restore status>
</define-tag>


<!-- ---------------------------------------------------------------------- -->
<!-- Define a tag for news ticker                                           -->
<!-- ---------------------------------------------------------------------- -->

<define-tag NEWS whitespace=delete>
<preserve de-date>
<preserve en-date>
<preserve es-date>
<preserve de-text>
<preserve en-text>
<preserve es-text>
<set-var %attributes>

<TR><TD bgcolor=#E0E0E0>
<B><I>
<ES><get-var es-date></ES>
<EN><get-var en-date></EN>
<DE><get-var de-date></DE>
</I></B><BR>
</TD>

<TR><TD bgcolor=#E0E0E0>
<ES><get-var es-text></ES>
<EN><get-var en-text></EN>
<DE><get-var de-text></DE>
<BR>
</TD>
<restore es-date>
<restore de-date>
<restore en-date>
<restore es-text>
<restore de-text>
<restore en-text>
</define-tag>


<!-- ---------------------------------------------------------------------- -->
<!-- Define new tags for paragraphs                                         -->
<!-- ---------------------------------------------------------------------- -->

<!-- spanish paragraph -->

<define-tag es-p endtag=required>
<es><p align=justify> %body</p></es>
</define-tag>

<!-- english paragraph -->

<define-tag en-p endtag=required>
<en><p align=justify> %body</p></en>
</define-tag>

<!-- german paragraph -->

<define-tag de-p endtag=required>
<de><p align=justify> %body</p></de>
</define-tag>
